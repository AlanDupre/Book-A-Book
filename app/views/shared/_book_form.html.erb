
<%= simple_form_for @book do |f| %>
  <%# TITLE %>
  <div class="form-group">
    <div class="form-group row justify-content-center">
      <div class="col-sm-10 width-150p">
        <%= f.text_field :title, class: "form-control", placeholder: 'Titre' %>
      </div>
    </div>

    <%# DESCRIPTION %>
    <div class="form-group row justify-content-center">
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control", placeholder: 'Description' %>
      </div>
    </div>

    <%# AUTHOR %>
    <div class="form-group row justify-content-center">
      <div class="col-sm-10">
        <%= f.text_field :author, class:"form-control", placeholder: 'Auteur' %>
      </div>
    </div>


    <%# Prix %>
      <div class="form-group row justify-content-center">
      <div class="col-sm-10">
        <%= f.number_field :price, class:"form-control", placeholder: 'Prix' %>
      </div>
    </div>

    <div class="row justify-content-center">
      <%= f.input :photo, label: false, as: :file, input_html: {class: "form-control"} %>
    </div>

    <%= f.submit "Ajoutez votre livre", class:"btn btn-success" %> 
  </div>
<% end %>
  

