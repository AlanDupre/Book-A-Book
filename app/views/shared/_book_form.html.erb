<%= simple_form_for @book do |f| %>
  <%# TITLE %>
  <div class="form-group">
    <div class="form-group row justify-content-center">
      <div class="col-sm-10 width-150p">
        <%= f.text_field :title, class: "form-control", placeholder: 'Title' %>

      </div>
    </div>

    <%# DESCRIPTION %>
    <div class="form-group row justify-content-center">
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control", placeholder: 'Description' %>
      </div>
    </div>

    <%# AUTHOR %>
    <div class="form-group row justify-content-center">
      <div class="col-sm-10">
        <%= f.text_field :author, class:"form-control", placeholder: 'Author' %>
      </div>
    </div>


    <%# Prix %>
      <div class="form-group row justify-content-center">
      <div class="col-sm-10">
        <%= f.number_field :price, class:"form-control", placeholder: 'Price' %>
      </div>
    </div>

    <div class="row justify-content-center">
      <%= f.input :photo, as: :file, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
    </div>

    <div>
      <%= f.submit "Add a book", class:"btn btn-success" %> 
    </div>
  </div>
<% end %>

