
  <%= simple_form_for @book do |f| %>
  <h2>Informations</h2>
    <%# TITLE %>
    <div class="form-group row">
      <%= f.label :titre, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <%# DESCRIPTION %>
    <div class="form-group row">
      <%= f.label :description, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <%# AUTHOR %>
    <div class="form-group row">
      <%= f.label :auteur, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :author, class:"form-control" %>
      </div>
    </div>

    <%# ISBN %>
    <div class="form-group row">
      <%= f.label :ISBN, class:"bcol-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.number_field :isbn, class:"form-control" %>
      </div>
    </div>

  <h2>Votre prix</h2>
  <%# Prix %>
     <div class="form-group row">
      <%= f.label :ISBN, class:"bcol-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.number_field :isbn, class:"form-control" %>
      </div>
    </div>
  
  <h2>Images</h2>
    <div class="form-group row">
      <%= f.label :poster_url, class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :poster_url, class:"form-control" %>
      </div>
    </div>

    <div class="form-group">
    <label for="exampleFormControlFile1">Ajoutez une image</label>
    <input type="file" class="form-control-file" id="exampleFormControlFile1">

    <%= f.submit "Ajouter votre livre" , class:"btn btn-primary" %>
  <% end %>

